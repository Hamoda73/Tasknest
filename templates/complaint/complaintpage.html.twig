{% extends 'base.html.twig' %}


{% block title %}Complaint{% endblock %}


{% block body %}

<main>
    <header class="rec-header d-flex flex-column justify-content-center align-items-center" img>
        <div class="container">
            <div class="row align-items-center">
                <div class="col-lg-5 col-12">
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a href="index.html">Homepage</a></li>
                            <li class="breadcrumb-item active" aria-current="page">Reclamation</li>
                        </ol>
                    </nav>
                    <h2 class="text-white">Complaints management system</h2>
                </div>
            </div>
        </div>
    </header>
    <section class="explore-section section-padding" id="section_2">
        <div class="container-fluid">
            <div class="row">
                <ul class="nav nav-tabs" id="myTab" role="tablist">
                    <li class="nav-item" role="presentation">
                        <button class="nav-link active" id="Send-tab" data-bs-toggle="tab"
                            data-bs-target="#Send-tab-pane" type="button" role="tab" aria-controls="Send-tab-pane"
                            aria-selected="true">Send</button>
                    </li>
                    <li class="nav-item" role="presentation">
                        <a class="nav-link" href="{{ path('app_complaintconsult') }}" role="tab"
                            aria-controls="Consult-tab-pane" aria-selected="true">
                            Consult
                        </a>
                    </li>
                </ul>
            </div>
        </div>
        <div class="container">
            <div class="row">
                <div class="tab-content" id="myTabContent">
                    <div class="tab-pane fade show active" id="Send-tab-pane" role="tabpanel" aria-labelledby="Send-tab"
                        tabindex="0">
                        <div class="">
                            <div class="custom-form contact-form" role="form">
                                <div class="xx">
                                    {{ form_start(form,{'attr':{'novalidate':'novalidate'}} ) }}
                                    <div class="col-lg-6 col-md-6 col-12 mb-4">
                                        <div class="form-floating">
                                            {{ form_widget(form.type, {'attr': {'class': 'form-select
                                            rounded-4', 'readonly': 'readonly'}}) }}
                                            {{ form_errors(form.type) }}
                                            <label for="{{ form.type.vars.id }}">Complaint type</label>
                                        </div>
                                    </div>
                                    <div class="col-lg-12 col-12">
                                        <div class="form-floating">
                                            {{ form_widget(form.message, {'attr': {'class': 'form-control
                                            rounded-4', 'style': 'width: 800px; height: 150px;'}}) }}
                                            {{ form_errors(form.message) }}
                                            <label for="floatingTextarea">Tell me about your complaint</label>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-lg-3 col-12 ms-auto">
                                            <button type="submit" class="form-control btn btn-primary">Submit</button>
                                        </div>
                                    </div>
                                    {{ form_end(form) }}
                                    <img src="images/callcenter.jpg" alt="" height="300px" width="300px">
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="tab-pane fade" id="update-tab-pane" role="tabpanel" aria-labelledby="update-tab"
                        tabindex="0">
                        <div class="row"></div>
                        <div class="xx">
                            <form action="#" method="post" class="custom-form contact-form" role="form">
                                <div class="row">
                                    <div class="col-lg-6 col-md-6 col-12 mb-4">
                                        <div class="form-floating">
                                            <select name="type" id="type" class="form-select rounded-4" required="">
                                                <option value="" disabled selected>Select one</option>
                                                <option value="general">General Inquiry</option>
                                                <option value="support">Customer Support</option>
                                                <option value="billing">Billing Issue</option>
                                                <option value="other">Other</option>
                                            </select>
                                            <label for="subject">Complaints</label>
                                        </div>
                                    </div>
                                    <div class="col-lg-6 col-md-6 col-12 mb-4">
                                        <div class="form-floating">
                                            <select name="type" id="type" class="form-select rounded-4" required="">
                                                <option value="" disabled selected>Select a type</option>
                                                <option value="general">General Inquiry</option>
                                                <option value="support">Customer Support</option>
                                                <option value="billing">Billing Issue</option>
                                                <option value="other">Other</option>
                                            </select>
                                            <label for="subject">Complaints type</label>
                                        </div>
                                    </div>
                                    <div class="col-lg-12 col-12">
                                        <div class="form-floating">
                                            <textarea class="form-control rounded-4" id="message" name="message"
                                                placeholder="Tell me about the project"></textarea>
                                            <label for="floatingTextarea">Modify your complaint</label>
                                        </div>
                                    </div>
                                    <label for="avatar">Add attachement</label>
                                    <div>
                                        <input type="file" id="avatar" name="avatar" accept="image/png, image/jpeg" />
                                    </div>
                                    <div class="row">
                                        <div class="col-lg-3 col-12 ms-auto">
                                            <button type="submit" class="form-control btn btn-primary">Update</button>
                                        </div>
                                        <div class="col-lg-3 col-12 ms-0">
                                            <button type="submit" class="form-control btn btn-secondary">Delete</button>
                                        </div>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                    <div class="tab-pane fade" id="consult-tab-pane" role="tabpanel" aria-labelledby="consult-tab"
                        tabindex="0">
                        <div class="row">
                            <div class="xxx">
                                <form action="#" method="post" class="custom-form contact-form" role="form">
                                    <div class="row">
                                        <div class="col-lg-6 col-md-6 col-12 mb-4">
                                            <div class="form-floating">
                                                <select name="type" id="type" class="form-select rounded-4" required="">
                                                    <option value="" disabled selected>Select complaint</option>
                                                    <option value="general">General Inquiry</option>
                                                    <option value="support">Customer Suport</option>
                                                    <option value="billing">Billing Issue</option>
                                                    <option value="other">Other</option>
                                                </select>
                                                <label for="subject">Complaint</label>
                                            </div>
                                        </div>
                                        <table>
                                            <tr>
                                                <td>Type</td>
                                                <td>Message</td>
                                            </tr>
                                            {% for a in complaint %}
                                            <tr>
                                                <td>{{a.type}}</td>
                                                <td>{{a.message}}</td>
                                            </tr>
                                            {% endfor %}
                                        </table>
                                        <div class="row">
                                            <div class="col-lg-3 col-12 ms-auto">
                                                <button type="submit"
                                                    class="form-control btn btn-primary">Print</button>
                                            </div>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <section class="section-padding section-bg">
        <div class="container">
            <div class="row">

            </div>
        </div>
    </section>
</main>




{% endblock %}