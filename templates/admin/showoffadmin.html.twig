{% extends 'baseadmin.html.twig' %}

{% block title %}
    
    
{% endblock %}

{% block body %}
    <section class="explore-section section-padding" id="section_2" style="background-color: white;">
        <div class="container">
            <h1 class="text-center mt-3 mb-5 pagetitle">Uploaded Offers</h1>

            <div class="row">
                <div class="col">
                    <div class="table-responsive">
                        {% if offers is not empty %}
                        <table class="table table-striped table-hover">
                            <thead>
                                <tr class="header-row">
                                    <th>Entreprise</th>
                                    <th>Domain</th>
                                    <th>Post</th>
                                    <th>Description</th>
                                    <th>Salary</th>
                                    <th>Period</th>
                                    <th>Localisation</th>
                                    <th>Action</th>
                                    <th>Apps </th> 
                                    
                                </tr>
                            </thead>
                            <tbody>
                                {% for offer in offers %}
                                    <tr>
                                        <td>{{ offer.entrepriseName }}</td>
                                        <td>{{ offer.domain }}</td>
                                        <td>{{ offer.post }}</td>
                                        <td>{{ offer.description }}</td>
                                        <td>{{ offer.salary }}</td>
                                        <td>{{ offer.period }}</td>
                                        <td>{{ offer.localisation }}</td>
                                        <td>
                                            <a href="{{ path('deleteOfferadmin', {'id': offer.id}) }}" class="btn custom-btn-delete mt-3 mt-lg-4">Delete</a>
                                        </td>
                                        <td>
                                            <a href="{{ path('showappsadmin', {'offerId': offer.id}) }}" class="btn custom-btn mt-3 mt-lg-4">See Applications</a>
                                        </td>
                                       
                                    </tr>
                                {% endfor %}
                            </tbody>
                        </table>

                        {% else %}

                        <h6 class="text-center">No offers uploaded yet</h6>

                        {% endif %}
                    </div>
                </div>
            </div>
        </div>
    </section>

    <style>
        .custom-btn-delete {
            background-color: #dc3545;
            color: #fff;
            border: none;
            padding: 0.375rem 0.75rem;
            margin: 0.25rem;
            border-radius: 0.25rem;
            text-decoration: none;
            transition: background-color 0.3s;
        }

        .custom-btn-delete:hover {
            background-color: #e73131;
        }

        .custom-btn {
            background-color: #6610f2;
            color: #fff;
            border: none;
            padding: 0.375rem 0.75rem;
            margin: 0.25rem;
            border-radius: 0.25rem;
            text-decoration: none;
            transition: background-color 0.3s;
        }

        .custom-btn:hover {
            background-color: #4e089d;
        }

        .table-striped tbody tr:nth-of-type(odd) {
            background-color: #f0f2f1;
        }

        .table-hover tbody tr:hover {
            background-color: #eac6f7;
        }
        .header-row {
            background-color: #d89ef5;
            color: #100101;
        }
        
        .pagetitle {
            color: #340965; 
        }
    </style>
{% endblock %}
