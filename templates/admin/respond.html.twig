<div class="wrapper">


	<div class="content-wrapper">
		<div class="content-header">
			<div class="container-fluid">
				<div class="row mb-2">
					<div class="col-sm-6">
						<h1 class="m-0">Complaint to respond</h1>
					</div>
					<!-- /.col -->
					<div class="col-sm-6">
						<ol class="breadcrumb float-sm-right">
							<li class="breadcrumb-item">
								<a href="#">Complaints</a>
							</li>
							<li class="breadcrumb-item active">Complaint to respond</li>
						</ol>
					</div>
					<!-- /.col -->
				</div>
				<!-- /.row -->
			</div>
			<!-- /.container-fluid -->
		</div>

		<section class="content">
			<div class="container-fluid">

				<div class="card-body">
					<div class="table-responsive">
						<table class="table m-0">
							<thead>
								<tr>
									<th>Complaint ID</th>
									<th>Type</th>
									<th>Message</th>

								</tr>
							</thead>

							<tbody>
								<tr>
									<td>{{ complaint.id }}</td>
									<td>{{ complaint.type }}</td>
									<td>{{ complaint.message }}</td>

								</tr>
							</tbody>
						</table>
					</div>

					<!-- Input field for responding to the complaint -->
					<div class="mt-3">
						<label for="responseInput" class="form-label">Respond:</label>

						{{ form_start(form,{'attr':{'novalidate':'novalidate'}}) }}

						{{ form_widget(form.message, {'attr': {'class': 'form-control rounded-4', 'style': 'height: 150px;'}}) }}
						{{ form_errors(form.message) }}

						{{ form_widget(form.Complaint) }}
						{{ form_errors(form.Complaint) }}




						<button type="submit" class="form-control btn btn-primary mt-2">Submit</button>

						{{ form_end(form) }}
					</div>
				</div>

			</div>
		</section>
