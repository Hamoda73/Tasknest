<div class="wrapper">
	<div class="content-wrapper">
		<div class="content-header">
			<div class="container-fluid">
				<div class="row mb-2">
					<div class="col-sm-6">
						<h1 class="m-0">Response to edit</h1>
					</div>
					<div class="col-sm-6">
						<ol class="breadcrumb float-sm-right">
							<li class="breadcrumb-item">
								<a href="{{path('app_dashboard')}}">Back</a>
							</li>
							<li class="breadcrumb-item active">Complaint to respond</li>
						</ol>
					</div>
				</div>
			</div>
		</div>
		<section class="content">
			<div class="container-fluid">
				<div class="card-body">
					<div class="table-responsive">
						<table class="table m-0">
							<thead>
								<tr>
									<th>Complaint ID</th>
									<th>Type</th>
									<th>Message</th>
								</tr>
							</thead>
							<tbody>
								<tr>
									<td>{{ complaint.id }}</td>
									<td>{{ complaint.type }}</td>
									<td>{{ complaint.message }}</td>
								</tr>
							</tbody>
						</table>
					</div>
					<div class="mt-3">
						<label for="responseInput" class="form-label">Respond:</label>
						{{ form_start(form,{'attr':{'novalidate':'novalidate'}}) }}
						{{ form_widget(form.message, {'attr': {'class': 'form-control rounded-4', 'style': 'height: 150px;'}}) }}
						{{ form_errors(form.message) }}
						{{ form_widget(form.Complaint) }}
						{{ form_errors(form.Complaint) }}
						<p>

						</p>
						<button type="submit" class="form-control btn btn-primary mt-2" style="width: 20%;">Submit</button>
						{{ form_end(form) }}
					</div>
				</div>
			</div>
		</section>
	</div>
</div>

