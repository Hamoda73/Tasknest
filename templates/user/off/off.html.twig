{% extends 'base.html.twig' %}


{% block title %}Offers!{% endblock %}


{% block offer %}
<li class="nav-item">
    <a class="nav-link click-scroll" href="{{path('addformoff')}}">Post a Job</a>
</li>
<li class="nav-item">
    <a class="nav-link click-scroll" href="{{ path('show_offers', {'id':1}) }}">My posts</a>
</li>
{% endblock %}


{% block body %}
<main>
    <header class="site-header">
    <div class="container">
        <h2 class="text-white">Welcome to TASKNEST</h2>
        <h6 class="text-white">Post a Job and Unlock top talent for your projects </h6>
    </div>
</header> 



<section class="explore-section section-padding" id="section_2" style="background-color: white;">
    <div class="container">
        <h2 class="text-center mb-4" style="margin-top: -50px;">Post your offer!</h2>
        <div class="row">
            <div class="col-lg-6" style="order: 2;">
                <div class="ww" style="margin-top: 50px;">
                    <img src="images/loginpic.png" alt="loginpic" height="250" class="loginpic" style="width: auto; max-width: 40%;">
                </div>
            </div>
            <div class="col-lg-6" style="order: 1;">
                <div class="custom-form" id="post-offer" style="background-color: white; padding: 20px;">
                    {{ form_start(form, {attr: {novalidate: 'novalidate'}}) }}


                        <div class="margin-inputs xx">
                            <div class="xx form-floating label-width">
                                {{ form_widget(form.entrepriseName, {'attr': {'class': 'form-control'}}) }}
                                <label for="floatingInput">Entreprise</label>
                            </div>
                            <div class="xx form-floating label-width">
                                {{ form_widget(form.domain, {'attr': {'class': 'form-control'}}) }}
                                <label for="floatingInput">Domain</label>
                            </div>
                        </div>
                        <div class="margin-inputs xx">
                            <div class="xx form-floating label-width ">
                                {{ form_widget(form.post, {'attr': {'class': 'form-control'}}) }}
                                <label for="floatingInput" class="Post">Post</label>
                            </div>
                            <div class="label-width xx form-floating">
                                {{ form_widget(form.salary, {'attr': {'class': 'form-control'}}) }}
                                <label for="floatingInput">Salary</label>
                            </div>
                        </div>
                        <div class="margin-inputs form-floating">
                            {{ form_widget(form.description, {'attr': {'class': 'form-control'}}) }}
                            <label for="floatingInput">Description</label>
                        </div>
                        <div class="margin-inputs form-floating">
                            {{ form_widget(form.period, {'attr': {'class': 'form-control'}}) }}
                            <label for="floatingInput">Period</label>
                        </div>
                        <div class="margin-inputs form-floating">
                            {{ form_widget(form.localisation, {'attr': {'class': 'form-control'}}) }}
                            <label for="floatingInput">Localisation</label>
                        </div>
                       
                       
                        <div class="margin-inputs label-width1">
                            <button type="submit" class="form-control">Submit</button>
                        </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
</section>
</main>



{% endblock %}
