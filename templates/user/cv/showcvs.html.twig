            <script>
                $(document).ready(function () {
                    // Function to perform the search based on the specified skill
                    function searchSkill(value) {
                        console.log("Search triggered with value: " + value);
                        $(".custom-block").each(function () {
                            console.log("Checking CV");
                            var skills = $(this).find(".skill-item h6").map(function () {
                                return $(this).text().toLowerCase();
                            }).get();
                            console.log("Skills found: " + skills);
                            var found = true; // Assume CV is found by default
                            if (value.trim() !== "") { // Check if search value is not empty
                                found = skills.some(function(skill) {
                                    return skill.includes(value.toLowerCase());
                                });
                            }
                            $(this).toggle(found);
                        });
                    }
            
                    // Event handler for the search input
                    $("#searchSKILL").on("input", function () {
                        var searchText = $(this).val();
                        console.log("Search text: " + searchText);
                        searchSkill(searchText);
                    });
                });
